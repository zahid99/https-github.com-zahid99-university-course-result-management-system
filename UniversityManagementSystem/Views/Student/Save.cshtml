@model UniversityManagementSystem.Models.ApplicationUser

@{
    ViewBag.Title = "Save";
}
<link href="~/Content/jquery-ui.css" rel="stylesheet" />

<h2>Register Student</h2>

<style>
    #saveStudentForm{padding-left: 230px;}
    label.error {
        color: red;
       
    }

</style>

<body>
    
    @if (ViewBag.Message != null)
    {

        <p class="body-content" style="font-size:20px;color:green">
            @foreach (var msg in ViewBag.Message)
            {

                if (msg == ';')
                {
                    <br />
                }
                else
                {
                    @msg
                }
            }
        </p>

    }
    <form id="saveStudentForm" method="POST">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="Enter Name">
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="text" class="form-control" id="Email" name="Email" placeholder="Enter Email">
        </div>
        <div class="form-group">
            <label for="Contact">Contact</label>
            <input type="text" class="form-control" id="Contact" name="Contact" placeholder="Enter Contact No">
        </div>
        <div class="form-group">
            <label for="RegDate">Date</label>
            <input type="text" class="form-control" id="RegDate" name="RegDate" value="@DateTime.Now.ToShortDateString()">
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" placeholder="Enter Address">
        </div>
        <div class="form-group">
            <label for="DepartmentId">Department</label>
            <select id="DepartmentId" name="DepartmentId" class="form-control">
                <option value="">Select.......</option>
                @foreach (var dept in ViewBag.Departments)
                {
                    <option value="@dept.Id">@dept.Name</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-default">Register</button>

    </form>

    @section Scripts {
        <script src="~/Scripts/jquery-2.2.4.js"></script>       
        <script src="~/Scripts/jquery.validate.js"></script>
        <script src="~/Scripts/jquery-ui.js"></script>
        <script src="~/Scripts/jquery.validate.js"></script>       
        <script src="~/Scripts/jquery-ui.js"></script>
        <script>
            $(document).ready(function () {
                $('#RegDate').datepicker();
                $("#saveStudentForm").validate({
                    rules: {
                        Name: "required",
                        Email: {
                            required: true,
                            email: true
                        },
                        Address:"required",

                        Contact: "required",
                        RegDate: "required",

                    },
                    messages: {
                        Name: "Please enter the student Name",

                        Contact: "Please enter the student contact",
                        RegDate: "Select date",
                        Address: "Address is required!",

                    }
                });


            });
        </script>
    }

</body>





